<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_screen_layout"
    style="@style/scroll_view"
    tools:context=".AboutRsrActivity">

    <LinearLayout style="@style/linear_layout_window">

        <View style="@style/horizontal_line" />

        <RelativeLayout style="@style/relative_layout">

            <ImageView
                android:id="@+id/imageInfo"
                style="@style/image_view"
                android:src="@drawable/info_bg"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <View style="@style/horizontal_line_big" />

        <TextView
            android:id="@+id/infoText"
            style="@style/text_view"
            android:autoLink="web"
            android:text="@string/main_info" />

        <LinearLayout
            android:id="@+id/contacts"
            style="@style/linear_layout_contacts">

            <View style="@style/horizontal_line" />

            <TextView
                android:id="@+id/info_click"
                style="@style/text_view"
                android:text="@string/info_on_map"
                android:textColor="@color/colorAccent" />

            <View style="@style/horizontal_line" />
        </LinearLayout>

        <TextView
            android:id="@+id/infoText2"
            style="@style/text_view"
            android:text="@string/info_text" />

    </LinearLayout>
</ScrollView>
